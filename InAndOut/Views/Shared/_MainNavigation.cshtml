@using static InAndOut.Helpers.NavigationIndicatorHelper;
<aside class="main-sidebar sidebar-light-primary elevation-4">
    <a href="~/Home" class="brand-link">
        <img src="~/img/logo.png" alt="Sequis Logo" class="img-fluid"
             style="opacity: .8; width: 150px; margin-left: 39px; margin-right: 39px; margin-top: 15px; margin-bottom: 15px ">
        @*<span class="brand-text font-weight-light">&nbsp;</span>*@
    </a>
    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">Alexander Pierce</a>
            </div>
        </div>
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item ">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("home","index")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Dashboard
                        </p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="Item" asp-action="Index" class="nav-link @Url.MakeActiveClass("item","index")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Item
                        </p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a asp-controller="Expense" asp-action="Index" class="nav-link @Url.MakeActiveClass("expense","index")">
                        <i class="nav-icon fas fa-lock"></i>
                        <p>
                            Expense
                        </p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</aside>